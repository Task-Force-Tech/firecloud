<div class="alert alert-info">Image uploads save immediately.</div>
<div class="row">
	<div class="col-md-6">
		{{ form_start(form, {'attr': { 'id': 'photo-form' }}) }}
		<input type="hidden" name="photoId" value="{{ photo.id }}" />

		<div class="form-group" id="name">
			<label>Name</label>
			<input type="text" name="form[name]" value="{{ photo.name }}" class="form-control" />
		</div>
		<div class="form-group">
			<label>Description</label>
			<textarea style="height: 100px;" class="custom-scroll form-control" name="form[description]" placeholder="(enter any additional information)">{{ photo.description }}</textarea>
		</div>

		{% do form.name.setRendered %}
		{% do form.description.setRendered %}
		{{ form_end(form) }}
	</div>

	<div class="col-md-6">
		<form id="dz-form">
			<input type="hidden" id="photoId" name="photoId" value="{{ photo.id }}" />
			<div id="link-image" class="image dropzone" style="height: 200px; width: 200px; position: relative; margin: auto;">
				<input name="file" type="file">
				{% if photo.fileLocation %}
					<img id="photo-img" src="{{ photo.fileLocation }}" alt="" style="z-index: 1000; width: 100%; height: 100%;">
				{% else %}
					<img id="photo-img" src="/images/placeholder200.png" alt="" style="z-index: 1000; width: 100%; height: 100%;">
				{% endif %}
				<div class="dz-default dz-message" style="position: absolute; bottom: -1px; z-index: 1001; width: 100%; height:auto;"><span>Click or drop picture here</span></div>
			</div>
		</form>
	</div>
</div>
