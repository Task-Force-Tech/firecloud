<div class="form-group">
	<label>First Name</label>
	<input type="text" name="firstName" value="{{ location.firstName }}" class="form-control validate" />
</div>

<div class="form-group">
	<label>Last Name</label>
	<input type="text" name="lastName" value="{{ location.lastName }}" class="form-control validate" />
</div>

<div class="form-group">
	<label>Email</label>
	<input type="text" name="email" value="{{ location.email }}" class="form-control validate email" id="contact-email" />
	<p class="help-block" style="display:none;"><span class="text-danger">Please enter a valid email address.</span></p>
</div>